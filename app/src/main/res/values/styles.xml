<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <style name="titleItemText">
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="contentItemText">
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <style name="word_title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="word_header">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="word_header_italic">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="word_content">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <style name="ButtonInfo">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorBlue</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="ButtonAffirmative">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@drawable/btn_affirmative</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="ButtonTransparent">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="ButtonTransparent.Negative">
        <item name="android:textColor">@color/colorNegative</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

</resources>
